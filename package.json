{
    "name": "mern-boilerplate",
    "version": "1.0.0",
    "description": "Easy to use, mern boilerplate. Ready to deploy to heroku, no further configuration required.",
    "main": "index.js",
    "scripts": {
        "dev:app": "parcel watch src/app/index.html",
        "dev:server": "nodemon --watch src/server src/server/index.js",
        "dev": "concurrently -n app,server -c green,blue \"npm run dev:app\" \"npm run dev:server\"",
        "build": "parcel build src/app/index.html --out-dir src/server/public/app --public-url /app",
        "start": "NODE_ENV=production node src/server/index.js",
        "heroku-postbuild": "npm run build"
    },
    "author": "Jason Simms & Lukas Gisder-Dub√©",
    "license": "ISC",
    "dependencies": {
        "axios": "^0.21.0",
        "bcrypt": "^5.0.0",
        "body-parser": "^1.19.0",
        "chalk": "^4.1.0",
        "compression": "^1.7.4",
        "express": "^4.17.1",
        "helmet": "^4.2.0",
        "jsonwebtoken": "^8.5.1",
        "jwt-decode": "^3.1.2",
        "moment": "^2.29.1",
        "mongoose": "^5.11.7",
        "morgan": "^1.10.0",
        "react": "^17.0.1",
        "react-cookie-consent": "^6.2.1",
        "react-dom": "^17.0.1",
        "react-router": "^5.2.0",
        "react-router-dom": "^5.2.0",
        "recharts": "^1.8.5"
    },
    "devDependencies": {
        "babel-core": "*",
        "babel-plugin-transform-class-properties": "*",
        "babel-preset-env": "*",
        "babel-preset-react": "*",
        "babel-preset-stage-0": "*",
        "concurrently": "^5.3.0",
        "cssnano": "^4.1.10",
        "node-sass": "^5.0.0",
        "parcel-bundler": "*",
        "react-hot-loader": "^4.13.0"
    }
}